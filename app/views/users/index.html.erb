 <% flash.each do |key, value| %>
          <div class="alert alert-success"><%= value %></div>
  <% end %>

  <%= form_for @team do |f| %>
    <%= f.label "Weekly events" %> 
    <%= f.check_box :weekly_reminder_enabled, data: {toggle: 'toggle'}, id: 'weekly-reminder' %>
    <%= f.submit "Save" %>
  <% end %>

<div class="jumbotron row">
  <span class="col-md-5"><h1>Boys</h1>
  <% @boys.each do |boy| %>
    <h5><%= @boy_counter %>: <%= boy.name %>- <%= boy.number %><br></h5>
    <% @boy_counter += 1 %>
  <% end %></span>
  <span class="col-md-5"><h1>Girls</h1>
  <% @girls.each do |girl| %>
    <h5><%= @girl_counter %>: <%= girl.name %>- <%= girl.number %><br></h5>
    <% @girl_counter += 1 %>
  <% end %></span> 
  
</div>
  <%= form_for Message.new do |f| %>
  <h3><%= f.label "Send a quick message to everyone" %></h3>
  <%= f.text_area :message %><br><br>
  <%= f.submit "Send", class: 'btn btn-success'%>
  <% end %>

