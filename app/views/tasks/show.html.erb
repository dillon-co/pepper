<h1><%= @task.name %></h1>
<% if @task.time == "Weekly" %>
    <h3> Every <%= @task.day_of_week %></h3>
  <% elsif @task.time == "Monthly" %>
    <h3>On the <%= @task.day_of_month.ordinalize %> of every month</h3>
  <% end %>
<p class='task-message'><%= @task.message %></p>
<%= link_to "Edit Task", edit_task_path(@task), class: 'btn btn-info' %>
<%= link_to 'Delete Task', @task, method: :delete, class: 'btn btn-danger' %>